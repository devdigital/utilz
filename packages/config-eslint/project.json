{
  "name": "@utilz/config-eslint",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "postTargets": [
          "npm-publish",
          "git-version",
          "git-push",
          "github-release"
        ]
      }
    },
    "npm-publish": {
      "executor": "@utilz/nx-yarn-deploy:deploy",
      "options": {
        "projectFolderPath": "./packages/config-eslint",
        "access": "public"
      }
    },
    "git-version": {
      "command": "git --version"
    },
    "git-push": {
      "command": "git push --atomic --follow-tags"
    },
    "github-release": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    }
  }
}
